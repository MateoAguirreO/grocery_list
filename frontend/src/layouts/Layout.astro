---
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/react";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header
      class="p-4 flex justify-between items-center bg-gray-800 text-white"
    >
      <h1 class="text-xl font-bold">{title}</h1>
      <div>
        <SignedOut>
          <SignInButton mode="modal" />
        </SignedOut>
        <SignedIn>
          <UserButton />
        </SignedIn>
      </div>
    </header>

    <main class="p-4">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import "tailwindcss";
</style>

<style>
  html,
  body {
    background: #333;
    color-scheme: light dark;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
